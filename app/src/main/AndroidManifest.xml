<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.beltonp.phil.budget">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_coin"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ui.activities.HomeActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.activities.ExpenseActivity"
            android:label="@string/title_activity_expense"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.activities.IncomeActivity"
            android:label="@string/title_activity_income"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.activities.PurchasePlanActivity"
            android:label="@string/title_activity_purchase_plan"
            android:parentActivityName=".ui.activities.HomeActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.activities.ExpenseAddActivity"
            android:label="@string/title_activity_expense_add"
            android:parentActivityName=".ui.activities.ExpenseActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".ui.activities.IncomeAddActivity"
            android:label="@string/title_activity_income_add"
            android:parentActivityName=".ui.activities.IncomeActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>